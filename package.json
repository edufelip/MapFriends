{
  "name": "mapfriends",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "setup:python-tools": "python3 -m pip install -r scripts/requirements.txt",
    "generate:icons": "python3 scripts/generate_app_icons.py",
    "sync:native-icons": "python3 scripts/sync_native_icons.py",
    "sync:native-splash": "python3 scripts/sync_native_splash.py",
    "android": "expo run:android --variant devDebug",
    "android:dev": "expo run:android --variant devDebug",
    "android:prod": "expo run:android --variant prodDebug",
    "android:release": "expo run:android --variant prodRelease",
    "ios": "expo run:ios",
    "ios:dev": "./scripts/ios_dev.sh",
    "ios:prod": "expo run:ios --configuration Debug",
    "ios:release": "expo run:ios --configuration Release",
    "firebase": "npx firebase-tools deploy --only firestore:rules",
    "web": "expo start --web",
    "test": "jest"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.9.26",
    "@rnmapbox/maps": "^10.2.10",
    "expo": "~54.0.33",
    "expo-apple-authentication": "^8.0.8",
    "expo-auth-session": "^7.0.10",
    "expo-blur": "~15.0.8",
    "expo-crypto": "^15.0.8",
    "expo-font": "^14.0.11",
    "expo-image-picker": "~17.0.10",
    "expo-linear-gradient": "^15.0.8",
    "expo-localization": "^17.0.8",
    "expo-splash-screen": "~31.0.13",
    "expo-status-bar": "~3.0.9",
    "expo-web-browser": "^15.0.10",
    "firebase": "^12.9.0",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.11.0"
  },
  "devDependencies": {
    "@testing-library/react-native": "^13.3.3",
    "@types/react": "~19.1.0",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.17",
    "react-test-renderer": "^19.1.0",
    "typescript": "~5.9.2"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "private": true
}
