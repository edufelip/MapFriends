{
  "expo": {
    "name": "MapFriends",
    "slug": "mapfriends",
    "version": "1.0.0",
    "scheme": "com.eduardo880.mapfriends",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.edufelip.mapfriends",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "MapFriends uses your photo library so you can choose a profile avatar.",
        "NSPhotoLibraryAddUsageDescription": "MapFriends may save edited profile photos to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.edufelip.mapfriends"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": ["expo-apple-authentication"]
  }
}
